<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="GestioneEventiPU">

        <!--classi che saranno soggette a persistenza -->
        <class>org.Gestionale.Eventi</class>

        <!--configurazione della connessione al db-->
        <properties>
            <!--driver pg -->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <!-- indirizzo -->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/gestioneEventi"/>
            <!--user e password -->
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="adminpas" />
            <!-- dialetto (vocaboli) -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <!-- Creazione automatica delle tabelle -->
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>


    </persistence-unit>
</persistence>